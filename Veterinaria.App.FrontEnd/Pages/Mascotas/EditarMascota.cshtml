@page
@model Veterinaria.App.FrontEnd.EditarMascotaModel
@{
}
<h1>Editar Mascota</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="mascota.ID"/>
    <div class="form-group row">
        <label asp-for="mascota.Nombre" class="col-sm-2"></label>
        <input asp-for="mascota.Nombre" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="mascota.Edad" class="col-sm-2"></label>
        <input asp-for="mascota.Edad" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="CedulaDueño" class="col-sm-2">Dueño</label>
        <select asp-for="CedulaDueño" class="col-sm-2" asp-items="Model.dueños"></select>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-page="./ListaMascotas" class="btn btn-primary">Cancelar</a>
    </div>
</form>
