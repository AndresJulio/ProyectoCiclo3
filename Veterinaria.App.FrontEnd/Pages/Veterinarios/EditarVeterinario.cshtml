@page
@model MyApp.Namespace.EditarVeterinarioModel
@{
}
@using Veterinaria.App.Dominio
<h1>Editar Veterinario</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="veterinario.ID"/>
    <input hidden asp-for="veterinario.cedula"/>
    <div class="form-group row">
        <label asp-for="veterinario.Nombre" class="col-sm-2"></label>
        <input asp-for="veterinario.Nombre" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="veterinario.Apellido" class="col-sm-2"></label>
        <input asp-for="veterinario.Apellido" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="veterinario.Tarjeta_Profesional" class="col-sm-2"></label>
        <input asp-for="veterinario.Tarjeta_Profesional" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="veterinario.Jornada_Laboral" class="col-sm-2"></label>
        <input asp-for="veterinario.Jornada_Laboral" class="form-control">
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-page="/ListaVeterinarios" class="btn btn-primary">Cancelar</a>
    </div>
</form>
